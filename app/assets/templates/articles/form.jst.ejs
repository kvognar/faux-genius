
<form role="form" id="new-article-form">
  <div class="row">
    <div class="form-group col-md-5">
        <label for="article-title" class="control-label">
          Title:
        </label>
        <br>
          <input 
            type="text"
            class="form-control"
            id="article-title" 
            name="article[title]"
            placeholder="Title"
            value="<%= article.escape('title') %>">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-5">
      <label for="article-artist" class="control-label">
        By:
      </label>
      <br>
        <input 
            type="text" 
            class="form-control"
            name="artist[name]" 
            id="article-artist"
            placeholder="The primary artist, author, creator, etc.">
    </div>
    
    <div class="form-group col-md-5">
      <label for="article-album" class="control-label">
        Album:
      </label>
      <br>
      <input type="text"
             class="form-control"
             name="album[title]"
             id="article-album"
             placeholder="The album, collection, anthology, etc.">
    </div>
  </div>
  </div> <!-- row -->
  <div class="row">
  <div class="form-group col-md-12">
    <label for="article-body" class="control-label">
      Text:
    </label>
    <br>
      <textarea 
          name="article[body]" 
          class="form-control"
          rows="24"
          id="article-body"
          ><%= article.escape('body') %></textarea>
  </div>
</div>
  <input type="submit" value="Submit" class="btn btn-default">
</form>