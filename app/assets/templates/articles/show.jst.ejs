<div class="article-container">
  <h2><%= article.escape('title') %></h2>
  <h4><%= article.escape('artist') %></h4>
  <button class="annotate-button" hidden="true">Annotate</button>
  
<!-- In the long run this should not be a pre -->
  <% if (body) { %>
  <pre id="article-body"
       data-toggle="popover"
       data-trigger="manual"
       data-contents="Annotate"><%= body %></pre>
  <% } %>
 <div class="annotation-container"></div>
</div>
