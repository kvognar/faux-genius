<div class="article-container">
  <div class="article-header">
    <img src="<%= article.escape('image_url') %>">
    <div class="article-details">
      <h2 class="article-title"><span><%= article.escape('title') %></span></h2>
      <% if (article.artist) { %>
        <br>
        <a href="/#/artists/<%= article.artist.id %>">
          <h3 class="article-artist"><span><%= article.artist.escape('name') %></span></h3>
        </a>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="article-text col-md-7"></div>
    <div class="annotation-container col-md-4"></div>
  </div>
  <div class="row">
    <div class="suggestions-container col-md-6"></div>
  </div>
</div>
